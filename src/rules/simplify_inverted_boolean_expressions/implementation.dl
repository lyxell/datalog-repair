/* De Morgan's Laws */

/* Pre  !([:x] && [:y]) */
/* Post ![:x] || ![:y]  */
rewrite("simplify_inverted_boolean_expressions", filename, start, end, cat("!(", left_str, ") || !(", right_str, ")")) :-
    logical_complement_expression(id, expr),
    filename_of(id, filename),
    starts_at(id, start),
    ends_at(id, end),
    conditional_and_expression(expr, left, right),
    string_representation(left, left_str),
    string_representation(right, right_str).

/* Pre  !([:x] || [:y]) */
/* Post ![:x] && ![:y]  */
rewrite("simplify_inverted_boolean_expressions", filename, start, end, cat("!(", left_str, ") && !(", right_str, ")")) :-
    logical_complement_expression(id, expr),
    filename_of(id, filename),
    starts_at(id, start),
    ends_at(id, end),
    conditional_or_expression(expr, left, right),
    string_representation(left, left_str),
    string_representation(right, right_str).
